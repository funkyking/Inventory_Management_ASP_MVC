@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<body>
    <header>
        <h1>Welcome to the Inventory Management App</h1>
    </header>
    <main>
        <section class="hero">
            <div class="hero-content">
                <h2>Efficient Inventory Management</h2>
                <p>Streamline your inventory processes and stay organized.</p>
                <a href="#" class="btn btn-primary">Get Started</a>
            </div>
            <img src="inventory-hero.jpg" alt="Inventory Hero Image">
        </section>
        <section class="features">
            <h2>Key Features</h2>
            <ul>
                <li>
                    <img src="feature-1.jpg" alt="Feature 1">
                    <h3>Item Tracking</h3>
                    <p>Track your inventory items with ease and accuracy.</p>
                </li>
                <li>
                    <img src="feature-2.jpg" alt="Feature 2">
                    <h3>Inventory Alerts</h3>
                    <p>Receive notifications for low stock items and reordering.</p>
                </li>
                <li>
                    <img src="feature-3.jpg" alt="Feature 3">
                    <h3>Reporting & Analytics</h3>
                    <p>Generate reports and gain valuable insights about your inventory.</p>
                </li>
            </ul>
        </section>
    </main>
</body>
</html>
