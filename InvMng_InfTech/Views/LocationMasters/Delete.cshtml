@model InvMng_InfTech.Models.Location.LocationMaster

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-end mt-4 mb-lg-5">
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-list mr-1"></i> Back to List
    </a>
</div>



<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Delete Location</h5>
        </div>
        <div class="card-body">
            <div class="mb-4">
                <h6 class="mb-4 text-center">Are you sure you want to delete this Location?</h6>
                <div class="row">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4 text-md-end">
                                <i class="fas fa-map-marker-alt mr-2"></i> Location
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.Location)
                            </dd>
                            <dt class="col-sm-4 text-md-end">
                                <i class="fas fa-info-circle mr-2"></i> Description
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.Description)
                            </dd>
                            <dt class="col-sm-4 text-md-end">
                                <i class="fas fa-calendar-alt mr-2"></i> Modified Date
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.ModifiedDate)
                            </dd>
                        </dl>
                    </div>
                    <div class="col-md-6 d-flex justify-content-center align-items-center">
                        <form asp-action="Delete" class="d-inline">
                            <input type="hidden" asp-for="LocationID" />
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash-alt mr-2"></i> Delete
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
