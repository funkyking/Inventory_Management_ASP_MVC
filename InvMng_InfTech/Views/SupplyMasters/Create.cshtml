@model InvMng_InfTech.Models.Masters.SupplyMaster

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<script src="~/js/Forms.js" asp-append-version="true"></script>

<div class="d-flex justify-content-between align-items-center mt-4 mb-lg-5">

    @if (TempData.ContainsKey("EditMode") && (bool)TempData["EditMode"])
    { <h1 class="mb-0">Editing Supplier</h1> }
    else
    { <h1 class="mb-0">Adding Supplier</h1> }
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left mr-2"></i> Back to List
    </a>
</div>



<div class="row">
    <div class="col-xl-4">
        <!-- Profile picture card-->
        <div class="card mb-4 mb-xl-0">
            <div class="card-header">Image</div>
            <div class="card-body text-center">
                <!-- Profile picture image-->
                <img class="img-account-profile rounded-circle mb-2" src="assets/img/illustrations/profiles/profile-1.png" alt="">
                <!-- Profile picture help block-->
                <div class="small font-italic text-muted mb-4">JPG or PNG no larger than 5 MB</div>
                <!-- Profile picture upload button-->
                <button class="btn btn-primary" type="button">Upload new image</button>
            </div>
        </div>
    </div>
    <div class="col-xl-8">
        <!-- Account details card-->
        <div class="card mb-4">
            <div class="card-header">Additional Information</div>
            <div class="card-body">
                <div class="d-flex justify-content-end">
                    <button class="btn btn-outline-dark" id="resetButton">
                        <i class="fas fa-undo-alt mr-2"></i>
                    </button>
                </div>

                <form asp-action="@(TempData.ContainsKey("EditMode") && (bool)TempData["EditMode"] ? "Edit" : "Create")">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group mb-3">
                        <label asp-for="SupplierName" class="control-label small mb-1"></label>
                        <input asp-for="SupplierName" class="form-control" />
                        <span asp-validation-for="SupplierName" class="text-danger"></span>
                    </div>
                    <div class="row gx-3 mb-3 form-group">
                        <div class="col-md-6 form-group">
                            <label asp-for="Industry" class="control-label small mb-1"></label>
                            <input asp-for="Industry" class="form-control" />
                            <span asp-validation-for="Industry" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 form-group">
                            <label asp-for="Representative" class="control-label small mb-1"></label>
                            <input asp-for="Representative" class="form-control" />
                            <span asp-validation-for="Representative" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row gx-3 mb-3">
                        <div class="col-md-6 form-group">
                            <label asp-for="Department" class="control-label small mb-1"></label>
                            <input asp-for="Department" class="form-control" />
                            <span asp-validation-for="Department" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 form-group">
                            <label asp-for="Position" class="control-label small mb-1"></label>
                            <input asp-for="Position" class="form-control" />
                            <span asp-validation-for="Position" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row gx-3 mb-3 form-group">
                        <div class="col-md-6 form-group">
                            <label asp-for="ContactNo" class="control-label small mb-1"></label>
                            <input asp-for="ContactNo" class="form-control" />
                            <span asp-validation-for="ContactNo" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 form-group">
                            <label asp-for="Website" class="control-label small mb-1"></label>
                            <input asp-for="Website" class="form-control" />
                            <span asp-validation-for="Website" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mb-3 form-group">
                        <label asp-for="Email" class="control-label small mb-1"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="row gx-3 mb-3 form-group">
                        <div class="col-md-6">
                            <label asp-for="Address" class="control-label small mb-1"></label>
                            <input asp-for="Address" class="form-control" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 form-group">
                            <label asp-for="City" class="control-label small mb-1"></label>
                            <input asp-for="City" class="form-control" />
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                    </div>
                     <div class="row gx-3 mb-3">
                        <div class="col-md-6 form-group">
                            <label asp-for="Postcode" class="control-label small mb-1"></label>
                            <input asp-for="Postcode" class="form-control" />
                            <span asp-validation-for="Postcode" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 form-group">
                            <label asp-for="State" class="control-label small mb-1"></label>
                            <input asp-for="State" class="form-control" />
                            <span asp-validation-for="State" class="text-danger"></span>
                        </div>
                    </div>
                    <br>
                    
                    <div class="form-group d-grid gap-2 col-6 mx-auto">
                        @if (TempData.ContainsKey("EditMode") && (bool)TempData["EditMode"])
                        { <input type="submit" value="Save" class="btn btn-secondary" /> }
                        else
                        { <input type="submit" value="Create" class="btn btn-primary" /> }
                    </div>

                </form>
            </div>
        </div>

    </div>
</div>



